<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>

    <!-- JDBC Database connection settings -->
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bankdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Sujan@2003</property>
        <property name="hibernate.hbm2ddl.auto">update</property> <!-- Corrected value -->
        <property name ="show_sql">true</property>
         <!-- JDBC connection pool settings -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <!-- Options: validate | update | create | create-drop -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Current session context - commented out for manual session management -->
        <!-- <property name="hibernate.current_session_context_class">thread</property> -->

        <!-- Disable second-level cache -->
        <property name="hibernate.cache.use_second_level_cache">false</property>

        <!-- Enable batch processing -->
        <property name="hibernate.jdbc.batch_size">20</property>

        <!-- Transaction isolation level -->
        <property name="hibernate.connection.isolation">2</property>

        <!-- Entity mapping -->
        <mapping class="com.bank.model.Account"/>
        
    </session-factory>
</hibernate-configuration>
